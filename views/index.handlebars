<div class="header-container">
	<h1>EAT-DA-BURGER!</h1>
</div>

<div class="container">
	<div class="row">
		<section id="notDevouredList">
		<h2>Burgers To Be Devoured!</h2>
			{{#each burgers}}
				{{#unless this.devoured}}
					<li>

						{{this.id}}. {{this.burger_name}}
					
						<button class="devour-button" data-id="{{this.id}}">Devour It!</button>

					</li>
				{{/unless}}
			{{/each}}
	</section>
	<section id="devouredList">
		<h2>Burgers Devoured!</h2>
			{{#each burgers}}
				{{#if this.devoured}}
					<li class="devouredBurgers">
						{{this.id}}. {{this.burger_name}}
					</li>
				{{/if}}
			{{/each}}
	</section>
	</div>
	<div class="row">

		<h2>Add a Burger to be Devoured!</h2>
		<form id="burger-create-form">
			<div class="form-group">
				<label for="new-burger-name">Burger Name:</label>
				<input type="text" id="new-burger-name" name="burger_name"></input>
			</div>
			<button class="btn btn-primary" type="submit">Add Burger</button>
		</form>

	</div>
</div>